<%- include ../../partials/header %>
<%- include ../../partials/navbar %>
<%- include ../../partials/sidebar %>
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Payment</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Home</a></li>
              <li class="breadcrumb-item"><a href="/payment">Payment</a></li>
              <li class="breadcrumb-item active">Edit Payment</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>
  
    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <div class="card card-warning">
              <div class="card-header">
                <h3 class="card-title">
                    Create Payment
                </h3>
              </div>
              <!-- /.card-header -->
              <form action="/payment/edit/<%= payment._id %>?_method=PUT" method="POST">
                <div class="card-body">
                  <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" name="name" class="form-control" id="name" value="<%= payment.name %>" placeholder="Input Your Name" required>
                  </div>

                  <div class="form-group">
                    <label>Card</label>
                    <select class="form-control select2" style="width: 100%;" name="card">
                      <option selected="selected">Select Card</option>
                      <% card.forEach(card=>{ %>
                        <option value="<%= card._id %>"
                            <% if(card._id.toString() === payment?.card?._id.toString()) { %>
                                selected
                            <% } %>
                            > <%= card.name %> </option>
                      <% }) %>
                    </select>
                  </div>

                  <div class="form-group">
                    <label for="numberID">Number Card</label>
                    <input type="number" name="numberID" value="<%= payment.numberID %>" class="form-control" id="numberID" placeholder="Input Card Number" required>
                  </div>
                  </div>

                <div class="card-footer">
                  <button type="submit" class="btn btn-warning">Edit</button>
                </div>
              </form>
            </div>
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>
  <%- include ../../partials/footer %>
  <%- include ../../partials/js %>